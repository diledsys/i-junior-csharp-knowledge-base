using System;

namespace LocalMaxima
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random rand = new Random();

            const int size = 30;
            int[] array = new int[size];
            int minimumRandomValue = 1;
            int maximumRandomValue = 100;

            for (int i = 0; i < size; i++)
            {
                array[i] = rand.Next(minimumRandomValue, maximumRandomValue + 1);
            }

            Console.WriteLine("Массив:");
            Console.WriteLine(string.Join("; ", array));

            Console.WriteLine("\nЛокальные максимумы:");

            if (size > 1 && array[0] > array[1])
            {
                Console.Write(array[0] + " ");
            }

            for (int i = 1; i < size - 1; i++)
            {
                if (array[i] > array[i - 1] && array[i] > array[i + 1])
                {
                    Console.Write(array[i] + " ");
                }
            }

            if (size > 1 && array[size - 1] > array[size - 2])
            {
                Console.Write(array[size - 1] + " ");
            }

            Console.WriteLine();
        }
    }
}
